<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5sp"
    android:layout_marginBottom="10sp">


    <TextView
        android:id="@+id/pasta_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="Pasta"
        android:layout_marginTop="20dp"
        android:textSize="30sp"/>

    <ScrollView
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pasta_head"
        android:layout_marginTop="20sp"
        android:background="@color/teal_200"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/p1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="20sp"
                >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="168dp"
                    android:layout_height="159dp"
                    tools:srcCompat="@drawable/pasta" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10sp">
                    <TextView
                        android:id="@+id/p1_head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pasta Barbaresca"
                        android:textSize="25sp"
                        />

                    <TextView
                        android:id="@+id/p1_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="creamy sauce with fresh broccoli, tomatoes, garlic, parsley, , parmesan cheese and chilli pepper" />

                    <TextView
                        android:id="@+id/p1_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$ 50.67"
                        android:textSize="25sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="*Costimization avaliable*" />

                </LinearLayout>


            </LinearLayout>
        <LinearLayout
            android:id="@+id/p2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="20sp"
            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="168dp"
                android:layout_height="159dp"
                tools:srcCompat="@drawable/pasta"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10sp">
                <TextView
                    android:id="@+id/p2_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pasta Del Fattore"
                    android:textSize="25sp"
                    />

                <TextView
                    android:id="@+id/p2_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Homemade pasta tossed with sauteÃ©d diced chicken, olive oil, garlic, sun dried tomato, asparagus, cream." />

                <TextView
                    android:id="@+id/p2_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$ 47.56"
                    android:textSize="25sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*Costimization avaliable*" />

            </LinearLayout>


        </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>