<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android=
    "http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/pizza_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="Pizza"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        />

    <ScrollView
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pizza_head"
        android:layout_marginTop="20sp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/p1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="20sp"
            >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="168dp"
                android:layout_height="159dp"
                tools:srcCompat="@drawable/pasta" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10sp">
                <TextView
                    android:id="@+id/p1_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FarmmHouse pizza"
                    android:textSize="25sp"
                    />

                <TextView
                    android:id="@+id/p1_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delightful combination of onion, capsicum, tomato and grilled mushroom" />

                <TextView
                    android:id="@+id/p1_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="25.67"
                    android:textSize="25sp"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*Costimization avaliable*" />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/p2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="20sp"
            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="168dp"
                android:layout_height="match_parent"
                tools:srcCompat="@drawable/pizza2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10sp">
                <TextView
                    android:id="@+id/p2_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Veg Extravagenza"
                    android:textSize="25sp"
                    />

                <TextView
                    android:id="@+id/p2_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Black olives, capcicum, onion, grilled mushroom, corn, tomato, jalepeno and extra cheese" />

                <TextView
                    android:id="@+id/p2_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="25.67"
                    android:textSize="25sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*Costimization avaliable*" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    </ScrollView>>


</RelativeLayout>